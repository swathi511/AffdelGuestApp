<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg"
    android:padding="16dp"
    android:clickable="true">

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activity.MainActivity"
    android:orientation="vertical">

    <ImageView android:id="@+id/am_iv_logo"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/logo"/>

    <EditText android:id="@+id/ar_et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/am_iv_logo"
        android:background="@drawable/et_bg"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:padding="8dp"
        android:hint="Name"
        android:textColorHint="#000000"
        android:maxLines="1"
        android:inputType="text"
         android:drawableRight="@drawable/user"
        android:drawablePadding="12dp"
        android:textSize="16sp"/>

    <EditText android:id="@+id/ar_et_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/am_et_mobile_no"
        android:background="@drawable/et_bg"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:inputType="number"
        android:padding="8dp"
        android:hint="Mobile Number"
        android:textColorHint="#000000"
        android:maxLines="1"
        android:drawableRight="@drawable/mobile"
        android:drawablePadding="12dp"
        android:textSize="16sp"/>

    <EditText android:id="@+id/ar_et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_bg"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:padding="8dp"
        android:hint="Email Id"
        android:textColorHint="#000000"
        android:maxLines="1"
        android:inputType="textEmailAddress"
         android:drawableRight="@drawable/email"
        android:drawablePadding="12dp"
        android:textSize="16sp"/>

    <EditText android:id="@+id/ar_et_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_bg"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:padding="8dp"
        android:hint="Password"
        android:textColorHint="#000000"
        android:maxLines="1"
        android:inputType="textPassword"
         android:drawableRight="@drawable/pwd"
        android:drawablePadding="12dp"
        android:textSize="16sp"/>
    <EditText android:id="@+id/ar_et_c_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_bg"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:padding="8dp"
        android:hint="Confirm Password"
        android:textColorHint="#000000"
        android:maxLines="1"
        android:inputType="textPassword"
         android:drawableRight="@drawable/pwd"
        android:drawablePadding="12dp"
        android:textSize="16sp"/>

    <EditText android:id="@+id/ar_et_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_bg"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:padding="8dp"
        android:hint="Address"
        android:textColorHint="#000000"
        android:maxLines="1"
        android:inputType="textMultiLine"
        android:lines="3"
        android:textSize="16sp"
        android:gravity="start" />

    <EditText android:id="@+id/ar_et_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_bg"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:padding="8dp"
        android:hint="City"
        android:textColorHint="#000000"
        android:maxLines="1"
        android:inputType="textAutoComplete"
         android:drawableRight="@drawable/city"
        android:drawablePadding="12dp"
        android:textSize="16sp"/>

    <Button android:id="@+id/ar_bt_get_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_bg"
        android:text="Get OTP"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="12dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:padding="8dp"
        android:layout_gravity="center"
        android:gravity="center"
        />





</LinearLayout>

</ScrollView>

</LinearLayout>
