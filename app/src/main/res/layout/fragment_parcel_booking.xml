<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg"
    android:padding="16dp"
    android:clickable="true">
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".activity.MainActivity"
    android:orientation="vertical">

    <ImageView android:id="@+id/am_iv_logo"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/logo"/>

    <EditText
        android:id="@+id/am_et_mobile_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/am_iv_logo"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/et_bg"
        android:drawableRight="@drawable/find"
        android:hint="Pickup Location"
        android:inputType="text"
        android:maxLines="1"
        android:padding="8dp"
        android:textColorHint="#000000"

        android:textSize="16sp" />

    <EditText android:id="@+id/am_et_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/am_et_mobile_no"
        android:background="@drawable/et_bg"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"

        android:padding="8dp"
        android:hint="Drop Location"
        android:textColorHint="#000000"
        android:maxLines="1"
         
        android:drawableRight="@drawable/find"
        android:drawablePadding="12dp"
        android:textSize="16sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/am_iv_logo"
        android:background="@drawable/et_bg"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:padding="8dp"
        android:hint="No. of Items"
        android:textColorHint="#000000"
        android:maxLines="1"
        android:inputType="text"
       
        android:drawablePadding="12dp"
        android:textSize="16sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/am_et_mobile_no"
        android:background="@drawable/et_bg"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"

        android:padding="8dp"
        android:hint="Actual weight in KGs"
        android:textColorHint="#000000"
        android:maxLines="1"
         
        
        android:drawablePadding="12dp"
        android:textSize="16sp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/am_et_mobile_no"
        android:background="@drawable/et_bg"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"

        android:padding="8dp"
        android:hint="Item Description"
        android:textColorHint="#000000"
        android:maxLines="1"
        android:inputType="textMultiLine"
        android:lines="3"


        android:textSize="16sp"
        android:gravity="start"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dimensions"
        android:textSize="16sp"
        android:gravity="left"
        android:textColor="@color/colorWhite"
        android:layout_weight="1"
       />

        <Spinner
            android:id="@+id/fpb_spinner"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_bg"
            android:gravity="right"




            />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_bg"
                android:padding="8dp"
                android:hint="L"
                android:textColorHint="#000000"
                 
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Length"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:layout_margin="4dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_bg"
                android:padding="8dp"
                android:hint="W"
                android:textColorHint="#000000"
                 
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Width"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:layout_margin="4dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_bg"
                android:padding="8dp"
                android:hint="H"
                android:textColorHint="#000000"
                 
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:layout_margin="4dp"/>


        </LinearLayout>

    </LinearLayout>

    <Button android:id="@+id/am_bt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_bg"
        android:text="Book"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:padding="8dp"
        android:layout_gravity="center"
        android:gravity="center"
        />

</LinearLayout>

</ScrollView>

</LinearLayout>