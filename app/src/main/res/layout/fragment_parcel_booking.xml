<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingTop="8dp">

    <ImageView android:id="@+id/am_iv_logo"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/logo"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"/>

    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android" >
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            tools:context=".activity.MainActivity"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/colorWhite"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONSIGNOR DETAILS"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="15sp"
                    android:textAllCaps="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/colorWhite"
                    android:layout_weight="1"/>


            </LinearLayout>

    <EditText
        android:id="@+id/fpb_et_pickup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/et_bg"
        android:drawableRight="@drawable/find"
        android:hint="Pickup Location"
        android:inputType="text"
        android:maxLines="1"
        android:padding="8dp"
        android:textColorHint="#383737"
        android:textSize="15sp"
        android:textColor="@color/colorBlack"/>

    <EditText android:id="@+id/fpb_et_drop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_bg"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:padding="8dp"
        android:hint="Drop Location"
        android:textColorHint="#383737"
        android:maxLines="1"
        android:drawableRight="@drawable/find"
        android:drawablePadding="12dp"
        android:textSize="15sp"
        android:textColor="@color/colorBlack"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/am_iv_logo"
        android:background="@drawable/et_bg"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:padding="8dp"
        android:hint="No. of Items"
        android:textColorHint="#383737"
        android:maxLines="1"
        android:inputType="text"
       
        android:drawablePadding="12dp"
        android:textSize="15sp"
        android:textColor="@color/colorBlack"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/am_et_mobile_no"
        android:background="@drawable/et_bg"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"

        android:padding="8dp"
        android:hint="Actual weight in KGs"
        android:textColorHint="#383737"
        android:maxLines="1"
         
        
        android:drawablePadding="12dp"
        android:textSize="15sp"
        android:textColor="@color/colorBlack"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/am_et_mobile_no"
        android:background="@drawable/et_bg"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"

        android:padding="8dp"
        android:hint="Item Description"
        android:textColorHint="#383737"
        android:maxLines="1"
        android:inputType="textMultiLine"
        android:lines="3"


        android:textSize="15sp"
        android:gravity="start"
        android:textColor="@color/colorBlack"

        />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_bg"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:padding="8dp"
                android:hint="GST No. (optional)"
                android:textColorHint="#383737"
                android:maxLines="1"
                android:inputType="text"
                android:drawablePadding="12dp"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dimensions"
        android:textSize="15sp"
        android:gravity="left"
        android:textColor="@color/colorWhite"
        android:layout_weight="1"
       />

        <Spinner
            android:id="@+id/fpb_spinner"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_bg"
            android:gravity="right"




            />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_bg"
                android:padding="8dp"
                android:hint="L"
                android:textColorHint="#383737"
                 
                android:textSize="15sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Length"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:layout_margin="4dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_bg"
                android:padding="8dp"
                android:hint="W"
                android:textColorHint="#383737"
                 
                android:textSize="15sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Width"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:layout_margin="4dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_bg"
                android:padding="8dp"
                android:hint="H"
                android:textColorHint="#383737"
                 
                android:textSize="15sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:layout_margin="4dp"/>


        </LinearLayout>

    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/colorWhite"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONSIGNEE DETAILS"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="15sp"
                    android:textAllCaps="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/colorWhite"
                    android:layout_weight="1"/>


            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_bg"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:padding="8dp"
                android:hint="Name"
                android:textColorHint="#383737"
                android:maxLines="1"
                android:inputType="text"
                android:drawableRight="@drawable/user"
                android:drawablePadding="12dp"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_bg"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:padding="8dp"
                android:hint="Name"
                android:textColorHint="#383737"
                android:maxLines="1"
                android:inputType="text"
                android:drawableRight="@drawable/mobile"
                android:drawablePadding="12dp"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_bg"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:padding="8dp"
                android:hint="GST No. (optional)"
                android:textColorHint="#383737"
                android:maxLines="1"
                android:inputType="text"
                android:drawablePadding="12dp"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"/>

    <Button android:id="@+id/am_bt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_bg"
        android:text="Book"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:padding="8dp"
        android:layout_gravity="center"
        android:gravity="center"
        />

</LinearLayout>

</ScrollView>

</LinearLayout>